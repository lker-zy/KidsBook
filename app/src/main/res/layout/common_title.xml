<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/common_title_layout"
        android:layout_width="fill_parent"
        android:layout_height="44.0dip"
        android:background="@color/common_title_bg">

        <LinearLayout
            android:id="@+id/common_title_left_btn"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:paddingLeft="14.0dip"
            android:paddingRight="10.0dip"
            android:visibility="gone">

            <ImageView
                android:id="@+id/common_title_left_btn_icon"
                android:layout_width="22.0dip"
                android:layout_height="22.0dip" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/common_title_right_btn"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:paddingLeft="10.0dip"
            android:paddingRight="14.0dip"
            android:visibility="gone">

            <ImageView
                android:id="@+id/common_title_right_btn_image_1"
                android:layout_width="22.0dip"
                android:layout_height="22.0dip"
                android:visibility="gone" />

            <TextView
                android:id="@+id/common_title_unread_num"
                android:layout_width="17.0dip"
                android:layout_height="17.0dip"
                android:layout_marginBottom="9.0dip"
                android:layout_marginLeft="-11.0dip"
                android:background="@drawable/card_unread_bg"
                android:gravity="center"
                android:minWidth="17.0dip"
                android:textColor="@color/white"
                android:textSize="@dimen/min_min_min_text_size"
                android:visibility="gone" />

            <TextView
                android:id="@+id/common_title_right_btn_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="1.0dip"
                android:paddingLeft="5.0dip"
                android:paddingRight="5.0dip"
                android:paddingTop="1.0dip"
                android:textColor="#ff474747"
                android:textSize="16.0sp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/common_title_right_btn_image_2"
                android:layout_width="22.0dip"
                android:layout_height="22.0dip"
                android:layout_marginLeft="20.0dip"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/common_title_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:paddingLeft="64.0dip"
            android:paddingRight="64.0dip"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="20.0sp"
            android:visibility="gone" />
    </RelativeLayout>

    <include
        android:id="@+id/title_line"
        layout="@layout/common_line" />
</LinearLayout>