<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="8dp"
    android:background="@drawable/item_border_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <ImageView
            android:id="@+id/essence_item_image"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:src="@drawable/essence_item_image_bg"
            android:contentDescription="image for essence" />

        <!--
        <LinearLayout
            android:gravity="right"
            android:layout_alignParentRight="true"
            android:layout_marginRight="18dp"
            android:background="@drawable/favourite_view_bg"
            android:layout_width="36dp"
            android:layout_height="48dp"
            android:orientation="vertical">

            <ImageView
                android:layout_gravity="center_horizontal"
                android:padding="4dp"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/recommend_heart" />

            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="388"
                android:textSize="10sp"/>

        </LinearLayout>
        -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="8dp"
            android:layout_below="@+id/essence_item_image">

            <TextView
                android:id="@+id/essence_item_title"
                android:gravity="left|center_vertical"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:text="test test test"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/essence_item_desc"
                android:paddingBottom="4dp"
                android:gravity="left|center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="test"
                android:textSize="12sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layerType="software"
                android:background="@drawable/dash_line" />

            <LinearLayout
                android:id="@+id/essence_item_base_info"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:text="山大出版社"
                    android:textSize="12sp"/>

                <View
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/magic_reco"/>

                <TextView
                    android:id="@+id/comment_num"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="22"
                    android:textSize="10sp"/>

                <ImageView
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/magic_my_review"/>

                <TextView
                    android:id="@+id/zan_num"
                    android:gravity="center"
                    android:layout_marginRight="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="22"
                    android:textSize="10sp"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
