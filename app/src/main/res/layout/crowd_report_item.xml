<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:padding="8dp"
android:layout_width="match_parent"
android:layout_height="200dp">

    <ImageView
        android:id="@+id/book_image"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/essence_item_bg"
        android:contentDescription="image for crowd" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_below="@id/book_image"
        android:background="@drawable/common_text_area_bg"
        android:layout_alignParentBottom="true">

        <TextView
            android:paddingLeft="20dp"
            android:id="@+id/report_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《沙滩》 众读报告"
            android:textSize="14sp"/>

        <TextView
            android:paddingLeft="20dp"
            android:id="@+id/report_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="已有 5 人提交报告"
            android:textSize="8sp"
            android:textColor="@color/red"/>

    </LinearLayout>

</RelativeLayout>
